    "@babel/preset-env": "7.4.5",
    "@fullhuman/postcss-purgecss": "1.2.0",
    "acorn": "^6.1.1",
    "ajv": "^6.12.3",
    "babel-eslint": "10.0.1",
    "core-js": "3.1.1",
    "css-mqpacker": "7.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-node": "9.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "postcss": "^7.0.16",
