    "webpacker:prod": "cross-env NODE_ENV=production node webpack.config.js"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-spread": "7.2.2",
